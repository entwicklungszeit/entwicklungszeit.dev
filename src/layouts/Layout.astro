---
import ScrollToTop from '../components/ui/ScrollToTop.astro';
import { ClientRouter } from 'astro:transitions';
import 'aos/dist/aos.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const {
  title,
  description = 'Entwicklungszeit Podcast - Dein Podcast für Softwareentwicklung, Führung und Kommunikation. Praxisnahe Einblicke und Expertenwissen für Entwickler.',
  image = 'https://entwicklungszeit.dev/social-preview.jpg',
  canonicalURL = `https://entwicklungszeit.dev${Astro.url.pathname}`
} = Astro.props;
---

<!doctype html>
<html
  lang="de"
  class="scroll-smooth"
  itemscope
  itemtype="http://schema.org/WebPage"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="Software Coaching, Programmier:innen Coaching, Software Engineer Mentor, Tech Lead Mentor, Karriere Mentor Software Development, Softwareentwicklung, Podcast, Developer, Engineering Leadership"
    />
    <meta name="author" content="Gregor Woiwode" />
    <meta name="robots" content="index, follow" />
    <meta name="geo.region" content="DE" />
    <meta name="geo.placename" content="DACH-Region" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#1E3A8A" />
    <meta name="msapplication-TileColor" content="#1E3A8A" />
    <meta name="theme-color" content="#ffffff" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://entwicklungszeit.dev/" />
    <meta property="og:site_name" content="Entwicklungszeit" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:locale" content="de_DE" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://entwicklungszeit.dev/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    <meta property="twitter:creator" content="@gregor_woiwode" />

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <ClientRouter />

    <!-- Handle failed fetch requests -->
    <script>
      window.addEventListener('unhandledrejection', event => {
        // Prevent errors from failed audit fetches from showing in console
        if (
          event.reason?.message?.includes('Failed to fetch') ||
          event.reason?.message?.includes('NetworkError')
        ) {
          event.preventDefault();
          console.debug('Suppressed fetch error for audit request');
        }
      });
    </script>

    <!-- Schema.org markup -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "PodcastSeries",
        "name": "Entwicklungszeit",
        "description": "Ein Podcast über Softwareentwicklung, Führung und Kommunikation",
        "url": "https://entwicklungszeit.dev",
        "author": {
          "@type": "Person",
          "name": "Gregor Woiwode",
          "url": "https://entwicklungszeit.dev",
          "jobTitle": "Tech Lead und Software Engineer Coach",
          "knowsAbout": [
            "Software Coaching",
            "Programmier Coaching",
            "Software Engineer Mentor",
            "Tech Lead Mentoring",
            "Softwareentwicklung",
            "Engineering Leadership",
            "Technische Führung",
            "Karriere Entwicklung"
          ]
        },
        "publisher": {
          "@type": "Organization",
          "name": "Entwicklungszeit",
          "logo": {
            "@type": "ImageObject",
            "url": "https://entwicklungszeit.dev/logo.svg"
          }
        },
        "offers": {
          "@type": "Offer",
          "name": "Software Engineering Coaching",
          "description": "Individuelles Coaching für Softwareentwickler und Tech Leads",
          "areaServed": {
            "@type": "GeoCircle",
            "geoMidpoint": {
              "@type": "GeoCoordinates",
              "latitude": 51.1657,
              "longitude": 10.4515
            },
            "geoRadius": "1000"
          }
        }
      }
    </script>

    <!-- Service Schema for Software Coaching -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Software Coaching & Tech Leadership Mentoring",
        "provider": {
          "@type": "Person",
          "name": "Gregor Woiwode",
          "url": "https://entwicklungszeit.dev"
        },
        "serviceType": [
          "Software Coaching",
          "Programmier Coaching",
          "Tech Lead Mentoring",
          "Engineering Leadership Coaching"
        ],
        "areaServed": {
          "@type": "Country",
          "name": "DE"
        },
        "description": "1:1 Software Coaching und Mentoring für Entwickler und Tech Leads",
        "url": "https://entwicklungszeit.dev"
      }
    </script>

    <!-- LocalBusiness Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Entwicklungszeit - Software Coaching",
        "description": "Software Coaching und Tech Leadership Mentoring mit Gregor Woiwode",
        "url": "https://entwicklungszeit.dev",
        "image": "https://entwicklungszeit.dev/logo.svg",
        "areaServed": "DE",
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "Sales"
        },
        "sameAs": [
          "https://www.youtube.com/@entwicklungszeit",
          "https://creators.spotify.com/pod/show/entwicklungszeit",
          "https://podcasts.apple.com/us/podcast/entwicklungszeit/id1767631664"
        ]
      }
    </script>
  </head>
  <body class="bg-white font-sans overflow-x-hidden">
    <div class="relative w-full overflow-x-hidden">
      <slot />
      <ScrollToTop />
    </div>
    <script>
      // Import AOS
      import AOS from 'aos';

      document.addEventListener('astro:page-load', () => {
        // Initialize AOS with refined options
        AOS.init({
          duration: 600,
          easing: 'ease-out-cubic',
          once: true,
          offset: 50,
          delay: 0
        });

        // Apply custom animation settings based on component type
        document.querySelectorAll('[data-aos]').forEach(element => {
          // Skip header elements - they keep their original animation
          if (element.closest('#main-header')) {
            return;
          }

          // Apply only fade animation to all other elements except cards
          const isCard =
            element.classList.contains('card') ||
            element.closest('.episode-card') ||
            (element.classList.contains('bg-white') &&
              element.classList.contains('rounded-xl'));

          if (isCard) {
            // Remove animation from cards entirely
            element.removeAttribute('data-aos');
            element.removeAttribute('data-aos-delay');
            element.removeAttribute('data-aos-duration');
            element.removeAttribute('data-aos-offset');
          } else {
            // Override any other animation with simple fade
            element.setAttribute('data-aos', 'fade');
          }
        });

        // Refresh animations after DOM changes
        AOS.refresh();
      });
    </script>
    <!-- Simple Analytics -->
    <!-- 100% privacy-first analytics -->
    <script async src="https://scripts.simpleanalyticscdn.com/latest.js"
    ></script>
  </body>
</html>

<style is:global>
  :root {
    --inter: 'Inter', sans-serif;
  }

  html,
  body {
    max-width: 100%;
    overflow-x: hidden;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--inter);
    letter-spacing: -0.02em;
  }

  body {
    font-family: var(--inter);
    letter-spacing: -0.01em;
  }

  header {
    transition: transform 0.3s ease-in-out;
  }

  header.scroll-down {
    transform: translate3d(0, -100%, 0);
  }

  header.scroll-up {
    transform: translate3d(0, 0, 0);
  }

  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4 {
    font-family: var(--inter);
  }

  /* Focus ring styles for better accessibility */
  :focus-visible {
    outline: 2px solid #1e3a8a;
    outline-offset: 2px;
  }

  button:focus-visible,
  a:focus-visible {
    outline: 2px solid #1e3a8a;
    outline-offset: 2px;
  }
</style>
