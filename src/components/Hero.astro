---
import { Image } from 'astro:assets';
import gregorImage from '../assets/gregor-woiwode.png';
import { benefits } from '../data/benefits';
import Badge from './ui/Badge.astro';
import Button from './ui/Button.astro';
---

<section class="pt-32 pb-16 relative overflow-hidden bg-gray-900 w-full">
  <!-- Background pattern for depth -->
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute inset-0 bg-[url('/patterns/circuit-board.svg')] bg-repeat opacity-5"
    >
    </div>
    <div
      class="absolute top-0 inset-x-0 h-64 bg-gradient-to-b from-primary-dark/20 to-transparent"
    >
    </div>
    <div
      class="absolute bottom-0 inset-x-0 h-64 bg-gradient-to-t from-gray-950/30 to-transparent"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div
      class="relative flex flex-col lg:grid lg:grid-cols-12 lg:gap-8 items-center min-h-[calc(100vh-8rem)]"
    >
      <div
        class="relative z-10 text-center lg:text-left space-y-12 w-full lg:col-span-7"
        data-aos="fade-right"
      >
        <div class="space-y-4">
          <h2 class="text-2xl font-semibold text-blue-400">Willkommen bei</h2>
          <h1
            class="font-great-vibes text-6xl sm:text-7xl bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent leading-[1.3] pb-1"
          >
            Entwicklungszeit
          </h1>
          <p
            class="text-xl text-gray-300 max-w-xl mx-auto lg:mx-0 leading-relaxed"
          >
            Entdecke dein volles Potenzial in der Softwareentwicklung
          </p>
        </div>

        <div
          class="grid grid-cols-1 sm:grid-cols-2 gap-4 max-w-lg mx-auto lg:mx-0 relative z-20"
        >
          {benefits.map(benefit => <Badge {...benefit} />)}
        </div>

        <div
          class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start relative z-20"
        >
          <Button href="#podcast" size="lg" variant="gradient" class="group">
            Podcast entdecken
            <svg
              class="w-5 h-5 ml-2 arrow-icon group-hover:translate-y-1 transition-transform"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 5v13m0 0l-7-7m7 7l7-7"></path>
            </svg>
          </Button>

          <Button
            href="#story"
            size="lg"
            variant="outline"
            class="text-white border-white/30 hover:border-white/80"
          >
            Meine Story
          </Button>
        </div>
      </div>

      <div
        class="relative z-0 flex w-full mt-12 lg:mt-0 h-full lg:col-span-5 items-center justify-center"
        data-aos="fade-left"
      >
        <div class="flex flex-col items-center">
          <!-- Circular image container -->
          <div
            class="relative w-[240px] h-[240px] lg:w-[380px] lg:h-[380px] animate-float"
          >
            <!-- Animated border -->
            <div
              class="absolute -inset-0.5 rounded-full bg-gradient-to-r from-primary via-secondary to-tertiary border border-white/10 animate-border-spin"
            >
            </div>

            <!-- Image -->
            <div
              class="absolute inset-[1px] rounded-full overflow-hidden bg-gradient-to-b from-gray-900 to-gray-800 border border-white/5"
            >
              <Image
                src={gregorImage}
                alt="Gregor Woiwode"
                quality="high"
                class="w-full h-full object-cover object-top"
                loading="eager"
              />
            </div>
          </div>

          <div class="text-center mt-4 lg:mt-6">
            <p class="text-gray-400">
              mit <span
                class="text-white font-semibold bg-gradient-to-r from-blue-400 to-cyan-300 bg-clip-text text-transparent"
                >Gregor Woiwode</span
              >
            </p>
          </div>
        </div>
      </div>
    </div>

    <style>
      @keyframes continuousArrow {
        0% {
          transform: translateY(0);
        }
        10% {
          transform: translateY(4px);
        }
        20%,
        100% {
          transform: translateY(0);
        }
      }
    </style>
  </div>
</section>
