---
import { Image } from 'astro:assets';
import gregorImage from '../assets/gregor-woiwode.png';
import { benefits } from '../data/benefits';
import Badge from './ui/Badge.astro';
import Button from './ui/Button.astro';
import PodcastPlatformIcon from './ui/PodcastPlatformIcon.astro';

import ApplePodcasts from '../assets/apple-podcasts.svg';
import Spotify from '../assets/spotify.svg';
import Youtube from '../assets/youtube.svg';
---

<section class="pt-24 lg:pt-32 pb-16 relative overflow-hidden bg-white w-full">
  <!-- Background pattern for depth -->
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute inset-0 bg-[url('/patterns/circuit-board.svg')] bg-repeat opacity-5"
    >
    </div>
    <div
      class="absolute top-0 inset-x-0 h-64 bg-gradient-to-b from-primary/10 to-transparent"
    >
    </div>
    <div
      class="absolute bottom-0 inset-x-0 h-64 bg-gradient-to-t from-gray-100/50 to-transparent"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div
      class="relative flex flex-col lg:grid lg:grid-cols-12 lg:gap-8 items-center min-h-[calc(100vh-8rem)]"
    >
      <div
        class="relative z-10 text-center lg:text-left space-y-14 w-full lg:col-span-7"
        data-aos="fade"
      >
        <div class="space-y-8">
          <span
            class="inline-block text-sm font-medium tracking-[0.2em] uppercase text-primary"
            >Willkommen bei</span
          >
          <h1
            class="font-sans text-[2.75rem] sm:text-6xl lg:text-7xl text-gray-900 font-extrabold tracking-tight leading-[1.1]"
          >
            Entwicklungszeit
          </h1>
          <p
            class="text-lg sm:text-xl text-gray-700 max-w-xl mx-auto lg:mx-0 leading-relaxed"
          >
            Entdecke dein volles Potenzial in der Softwareentwicklung
          </p>
        </div>

        <div
          class="grid grid-cols-1 sm:grid-cols-2 gap-4 max-w-lg mx-auto lg:mx-0 relative z-20"
        >
          {benefits.map(benefit => <Badge {...benefit} />)}
        </div>

        <div
          class="flex flex-col sm:flex-row gap-5 justify-center lg:justify-start relative z-20"
        >
          <Button href="#podcast" size="lg" variant="gradient" class="group">
            Podcast entdecken
            <svg
              class="w-5 h-5 ml-2 arrow-icon group-hover:translate-y-1 transition-transform"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 5v13m0 0l-7-7m7 7l7-7"></path>
            </svg>
          </Button>

          <Button
            href="#story"
            size="lg"
            variant="outline"
            class="text-gray-800 border-gray-300 hover:border-gray-500"
          >
            Meine Story
          </Button>
        </div>
      </div>

      <div
        class="relative z-0 flex w-full mt-12 lg:mt-0 h-full lg:col-span-5 items-center justify-center"
        data-aos="fade"
      >
        <div class="flex flex-col items-center">
          <!-- Circular image container -->
          <div
            class="relative w-[240px] h-[240px] lg:w-[380px] lg:h-[380px] animate-float"
          >
            <!-- Animated border -->
            <div
              class="absolute -inset-0.5 rounded-full bg-gradient-to-r from-primary via-secondary to-tertiary border border-gray-200 animate-border-spin"
            >
            </div>

            <!-- Image -->
            <div
              class="absolute inset-[1px] rounded-full overflow-hidden bg-gradient-to-b from-gray-50 to-white border border-gray-100"
            >
              <Image
                src={gregorImage}
                alt="Gregor Woiwode"
                quality="high"
                class="w-full h-full object-cover object-top"
                loading="eager"
              />
            </div>
          </div>

          <div class="text-center mt-4 lg:mt-6">
            <p class="text-gray-600">
              mit <span
                class="font-semibold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent"
                >Gregor Woiwode</span
              >
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Podcast platforms section - moved to bottom and centered -->
    <div class="py-12 text-center">
      <div class="flex flex-wrap items-center justify-center px-6 pb-4">
        <p class="text-gray-700 font-medium text-xl">Jetzt anhören auf</p>
        <PodcastPlatformIcon
          href="https://creators.spotify.com/pod/show/entwicklungszeit"
          label="Entwicklungszeit auf Spotify anhören"
          platform="spotify"
        >
          <Spotify
            class="w-full h-full transform transition-transform duration-300 group-hover:scale-105"
          />
        </PodcastPlatformIcon>

        <PodcastPlatformIcon
          href="https://podcasts.apple.com/us/podcast/entwicklungszeit/id1767631664"
          label="Entwicklungszeit auf Apple Podcasts anhören"
          platform="apple"
        >
          <ApplePodcasts
            class="w-full h-full transform transition-transform duration-300 group-hover:scale-105"
          />
        </PodcastPlatformIcon>

        <PodcastPlatformIcon
          href="https://www.youtube.com/@entwicklungszeit"
          label="Entwicklungszeit auf YouTube ansehen"
          platform="youtube"
        >
          <Youtube
            class="w-full h-full transform transition-transform duration-300 group-hover:scale-105"
          />
        </PodcastPlatformIcon>
      </div>
    </div>

    <style>
      @keyframes continuousArrow {
        0% {
          transform: translateY(0);
        }
        10% {
          transform: translateY(4px);
        }
        20%,
        100% {
          transform: translateY(0);
        }
      }

      .podcast-badge {
        position: relative;
      }

      .podcast-badge::before {
        content: '';
        position: absolute;
        inset: -3px;
        background: linear-gradient(90deg, #1e3a8a, #0284c7, #1e3a8a);
        border-radius: 9999px;
        z-index: -1;
        opacity: 0.5;
        animation: pulse-glow 3s ease-in-out infinite;
      }

      @keyframes pulse-glow {
        0%,
        100% {
          opacity: 0.5;
          transform: scale(1);
        }
        50% {
          opacity: 0.8;
          transform: scale(1.03);
        }
      }

      /* Standardize SVG icon sizes */
      .platform-icon-container svg {
        width: 32px;
        height: 32px;
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
      }
    </style>
  </div>
</section>
