---
interface Props {
  title: string;
  subheading?: string;
}

const { title, subheading } = Astro.props;
---

<h2
  class="font-display text-4xl sm:text-5xl font-bold text-gray-900 mb-6 sm:mb-8 relative inline-block text-center md:text-left"
  data-aos="fade-up"
>
  {
    subheading && (
      <span class="text-xs uppercase tracking-wider text-gray-500 block mb-1">
        {subheading}
      </span>
    )
  }
  {title}
  <span
    class="absolute -bottom-2 left-1/2 -translate-x-1/2 md:left-0 md:translate-x-0 w-1/3 h-1 bg-gradient-to-r from-primary to-secondary"
  ></span>
</h2>
