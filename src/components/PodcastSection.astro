<script>
  const readMoreBtn = document.getElementById('read-more-btn');
  const extendedContent = document.getElementById('podcast-content-extended');
  const toggleIcon = document.getElementById('toggle-icon');
  const btnText = readMoreBtn?.querySelector('span');
  let isExpanded = false;

  readMoreBtn?.addEventListener('click', () => {
    isExpanded = !isExpanded;
    readMoreBtn.setAttribute('aria-expanded', isExpanded.toString());

    if (isExpanded) {
      btnText.textContent = 'Weniger anzeigen';
      toggleIcon?.classList.add('rotate-180');
      extendedContent?.classList.add('max-h-[1000px]', 'opacity-100', 'mt-6');
      extendedContent?.classList.remove('max-h-0', 'opacity-0');
    } else {
      btnText.textContent = 'Mehr lesen';
      toggleIcon?.classList.remove('rotate-180');
      extendedContent?.classList.remove(
        'max-h-[1000px]',
        'opacity-100',
        'mt-6'
      );
      extendedContent?.classList.add('max-h-0', 'opacity-0');
    }
  });
</script>

<style>
  .podcast-tile {
    background: linear-gradient(145deg, #ffffff, #f5f5f5);
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  .podcast-tile:hover {
    transform: translateY(-4px);
    border-color: rgba(0, 0, 0, 0.1);
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
</style>
