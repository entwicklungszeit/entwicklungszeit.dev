---
import Button from './ui/Button.astro';
import Section from './ui/Section.astro';
---

<Section background="white" class="pt-32 sm:pt-40 lg:pt-48 pb-16 lg:pb-20">
  <!-- Background pattern for depth -->
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute inset-0 bg-[url('/patterns/circuit-board.svg')] bg-repeat opacity-5"
    >
    </div>
    <div
      class="absolute top-0 inset-x-0 h-80 bg-gradient-to-b from-primary/10 to-transparent"
    >
    </div>
    <div
      class="absolute bottom-0 inset-x-0 h-80 bg-gradient-to-t from-gray-100/50 to-transparent"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div
      class="relative flex flex-col lg:gap-8 items-center max-h-screen min-h-[70vh]"
    >
      <!-- Content section with title and description -->
      <div
        class="relative z-10 text-center space-y-6 sm:space-y-8 w-full"
      >
        <div class="space-y-4 sm:space-y-6">
          <span
            class="inline-block text-sm font-medium tracking-[0.2em] uppercase text-primary"
            >Impact Developer Programm</span
          >
          <h1
            class="font-sans text-4xl sm:text-5xl lg:text-6xl text-gray-900 font-extrabold tracking-tight leading-[1.1]"
          >
            Von Developer zum<br class="hidden sm:block" />Tech Lead
          </h1>
          <p
            class="text-lg sm:text-xl text-gray-700 max-w-2xl mx-auto leading-relaxed font-medium"
          >
            Entwickle dich zum technischen Leader, der sowohl fachlich als auch menschlich überzeugt. Ein maßgeschneidertes 1:1 Software Coaching Format.
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-4">
          <Button
            href="#transformation"
            size="lg"
            variant="gradient"
            aria-label="Mehr zum Impact Developer Programm erfahren"
          >
            Mehr erfahren
          </Button>
          <Button
            href="https://calendly.com/gregor-entwicklungszeit/30min"
            target="_blank"
            rel="noopener noreferrer"
            size="lg"
            variant="outline"
            aria-label="Termin buchen (öffnet neues Fenster)"
          >
            Termin buchen
          </Button>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="justify-center hidden sm:flex">
      <a
        href="#transformation"
        aria-label="Zum Programm springen"
        class="text-primary hover:text-secondary transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 rounded-full p-2 group"
      >
        <div class="flex flex-col items-center">
          <span
            class="text-sm font-semibold text-gray-700 mb-2 opacity-90 group-hover:opacity-100 transition-opacity"
            >Zum Programm</span
          >
          <div class="relative">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 animate-pulse-down"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
            <div
              class="absolute inset-0 bg-primary/5 rounded-full -z-10 blur-lg"
            >
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>
</Section>

<style>
  @keyframes pulse-down {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(8px);
    }
  }

  .animate-pulse-down {
    animation: pulse-down 2s ease-in-out infinite;
  }
</style>

