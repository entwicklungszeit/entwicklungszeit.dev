---
interface Props {
  id?: string;
  class?: string;
  background?: 'white' | 'gray' | 'gradient';
}

const { id, class: className = '', background = 'white' } = Astro.props;

const bgColors = {
  white: 'bg-white',
  gray: 'bg-gray-50',
  gradient: 'bg-gradient-to-b from-white via-gray-50 to-white'
};
---

<section
  id={id}
  class:list={[
    'py-24 sm:py-32 lg:py-40 relative w-full overflow-hidden',
    bgColors[background],
    className
  ]}
>
  <!-- Subtle background accent -->
  <div class="absolute inset-0 pointer-events-none">
    <div
      class="absolute inset-0 bg-gradient-to-b from-primary/5 via-transparent to-transparent opacity-30"
    >
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <slot />
  </div>
</section>
