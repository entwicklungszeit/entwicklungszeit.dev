---
interface Props {
  href: string;
  label: string;
  platform: 'spotify' | 'apple' | 'youtube' | 'google' | string;
}

const { href, label, platform } = Astro.props;

// Base classes for the platform links
const baseClasses =
  'icon-link group relative inline-block transition-all duration-300';
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={baseClasses}
  aria-label={label}
  data-platform={platform}
>
  <div
    class="platform-icon-container w-52 h-20 flex items-center justify-center p-3"
  >
    <slot />
  </div>
</a>

<style>
  .icon-link {
    filter: grayscale(0);
    opacity: 1;
    transition: all 0.3s ease;
    padding: 12px;
    margin: 8px;
  }

  .icon-link:hover {
    filter: grayscale(0);
    opacity: 0.9;
    transform: translateY(-2px);
  }

  .icon-link::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(to right, #3b82f6, #0ea5e9);
    transition: width 0.3s ease;
  }

  .icon-link:hover::after {
    width: 100%;
  }

  .platform-icon-container {
    position: relative;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .icon-link:hover .platform-icon-container {
    background-color: rgba(255, 255, 255, 0.05);
  }
</style>
