---
interface Props {
  href: string;
  label: string;
  platform: 'spotify' | 'apple' | 'youtube' | 'google' | string;
}

const { href, label, platform } = Astro.props;

// Base classes for the platform links
const baseClasses =
  'icon-link group relative inline-block transition-all duration-300';
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={baseClasses}
  aria-label={label}
  data-platform={platform}
>
  <div
    class="platform-icon-container w-48 h-16 flex items-center justify-center overflow-hidden p-2"
  >
    <slot />
  </div>
</a>

<style>
  .icon-link {
    filter: grayscale(0);
    opacity: 1;
    transition: all 0.3s ease;
    padding: 8px;
    margin: 4px;
  }

  .icon-link:hover {
    filter: grayscale(0);
    opacity: 0.9;
    transform: translateY(-2px);
  }

  .icon-link::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(to right, #3b82f6, #0ea5e9);
    transition: width 0.3s ease;
  }

  .icon-link:hover::after {
    width: 100%;
  }

  .platform-icon-container {
    position: relative;
    overflow: hidden;
    border-radius: 6px;
  }

  .platform-icon-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      rgba(255, 255, 255, 0.05)
    );
    transition: left 0.7s ease;
    z-index: 1;
  }

  .icon-link:hover .platform-icon-container::before {
    left: 100%;
  }

  /* Special animation styles for each platform */
  [data-platform='spotify'] .platform-icon-container::before {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(29, 185, 84, 0.15),
      rgba(29, 185, 84, 0.05)
    );
  }

  [data-platform='apple'] .platform-icon-container::before {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(252, 51, 92, 0.15),
      rgba(252, 51, 92, 0.05)
    );
  }

  [data-platform='youtube'] .platform-icon-container::before {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 0, 0, 0.15),
      rgba(255, 0, 0, 0.05)
    );
  }

  [data-platform='google'] .platform-icon-container::before {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(66, 133, 244, 0.15),
      rgba(66, 133, 244, 0.05)
    );
  }
</style>
