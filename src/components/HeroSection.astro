---
import ApplePodcasts from '../assets/apple-podcasts.svg';
import Spotify from '../assets/spotify.svg';
import Youtube from '../assets/youtube.svg';
---

<section
  class="hero-section relative min-h-screen flex items-center overflow-visible"
>
  <!-- Decorative wavy borders like reference -->
  <div class="absolute top-0 left-0 right-0 h-20 overflow-hidden">
    <svg
      class="absolute top-0 w-full h-full"
      viewBox="0 0 1440 100"
      preserveAspectRatio="none"
    >
      <path
        d="M0,20 C200,60 400,10 600,40 C800,70 1000,20 1200,50 C1300,60 1400,40 1440,45 L1440,0 L0,0 Z"
        fill="#ef4444"
        stroke="#dc2626"
        stroke-width="3"></path>
    </svg>
  </div>

  <div class="absolute bottom-0 left-0 right-0 h-20 overflow-hidden">
    <svg
      class="absolute bottom-0 w-full h-full"
      viewBox="0 0 1440 100"
      preserveAspectRatio="none"
    >
      <path
        d="M0,55 C200,30 400,80 600,60 C800,30 1000,70 1200,50 C1300,40 1400,60 1440,55 L1440,100 L0,100 Z"
        fill="#ef4444"
        stroke="#dc2626"
        stroke-width="3"></path>
    </svg>
  </div>

  <!-- Simplified gradient background like reference image -->
  <div class="absolute inset-0">
    <!-- Clean gradient background -->
    <div
      class="absolute inset-0 bg-gradient-to-br from-blue-50/50 via-purple-50/30 to-pink-50/50"
    >
    </div>

    <!-- Subtle animated gradient orbs - more subtle than before -->
    <div
      class="absolute top-0 -left-40 w-96 h-96 bg-gradient-to-br from-blue-200/30 to-indigo-200/30 rounded-full blur-3xl animate-blob"
    >
    </div>
    <div
      class="absolute top-40 -right-40 w-96 h-96 bg-gradient-to-br from-purple-200/30 to-pink-200/30 rounded-full blur-3xl animate-blob animation-delay-2000"
    >
    </div>
    <div
      class="absolute -bottom-40 left-1/2 w-96 h-96 bg-gradient-to-br from-indigo-200/30 to-blue-200/30 rounded-full blur-3xl animate-blob animation-delay-4000"
    >
    </div>
  </div>

  <!-- Full width container with better mobile padding -->
  <div
    class="w-full relative z-10 py-16 px-4 sm:py-20 sm:px-8 lg:px-16 xl:px-24"
  >
    <div
      class="flex flex-col gap-8 sm:gap-12 lg:gap-16 items-center justify-center"
    >
      <!-- Hero content -->
      <div class="text-center space-y-4 sm:space-y-6 max-w-6xl mx-auto w-full">
        <!-- Simple welcome text like reference -->
        <div class="space-y-2">
          <span
            class="block text-xs sm:text-sm font-semibold tracking-[0.15em] sm:tracking-[0.2em] uppercase text-primary/70"
          >
            Willkommen bei
          </span>
        </div>

        <!-- Main title with animated gradient -->
        <h1 class="hero-title relative px-2">
          <span
            class="block text-3xl xs:text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-black tracking-tight leading-tight"
          >
            <span
              class="bg-gradient-to-r from-primary via-secondary to-tertiary bg-clip-text text-transparent animate-gradient-x break-words"
            >
              Entwicklungszeit
            </span>
          </span>
        </h1>

        <!-- Subtitle with better typography -->
        <p
          class="text-base xs:text-lg sm:text-xl md:text-2xl lg:text-3xl text-gray-700 max-w-3xl mx-auto leading-relaxed font-light px-4 sm:px-0"
        >
          Entdecke dein volles Potenzial:
          <span
            class="font-semibold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent inline-block"
          >
            Software Coaching
          </span>
          <span class="block sm:inline">
            für ambitionierte Tech Leads und Entwickler</span
          >
        </p>

        <!-- Single Primary CTA Button -->
        <div class="flex justify-center pt-4 sm:pt-6">
          <a
            href="#video-section"
            class="group relative inline-flex items-center gap-2 px-6 sm:px-8 md:px-10 py-3 sm:py-4 bg-gradient-to-r from-primary to-secondary text-white font-semibold rounded-full shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300 text-sm sm:text-base"
          >
            <span>Mehr erfahren</span>
            <svg
              class="w-4 h-4 sm:w-5 sm:h-5 group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
            <!-- Shine effect -->
            <div
              class="absolute inset-0 rounded-full bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"
            >
            </div>
          </a>
        </div>
      </div>

      <!-- Podcast platforms - logos only -->
      <div class="relative w-full">
        <div class="text-center mb-4 sm:mb-6">
          <p
            class="text-sm sm:text-base md:text-lg text-gray-600 font-light px-4"
          >
            Verfügbar auf allen großen Plattformen
          </p>
        </div>

        <div
          class="flex items-center justify-center gap-4 sm:gap-6 md:gap-8 lg:gap-10"
        >
          <!-- Spotify -->
          <a
            href="https://creators.spotify.com/pod/show/entwicklungszeit"
            target="_blank"
            rel="noopener noreferrer"
            class="podcast-logo-button group"
            aria-label="Entwicklungszeit auf Spotify anhören"
          >
            <div
              class="w-14 h-14 sm:w-16 sm:h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 transition-transform group-hover:scale-110"
            >
              <Spotify class="w-full h-full" />
            </div>
          </a>

          <!-- Apple Podcasts -->
          <a
            href="https://podcasts.apple.com/us/podcast/entwicklungszeit/id1767631664"
            target="_blank"
            rel="noopener noreferrer"
            class="podcast-logo-button group"
            aria-label="Entwicklungszeit auf Apple Podcasts anhören"
          >
            <div
              class="w-14 h-14 sm:w-16 sm:h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 transition-transform group-hover:scale-110"
            >
              <ApplePodcasts class="w-full h-full" />
            </div>
          </a>

          <!-- YouTube -->
          <a
            href="https://www.youtube.com/@entwicklungszeit"
            target="_blank"
            rel="noopener noreferrer"
            class="podcast-logo-button group"
            aria-label="Entwicklungszeit auf YouTube ansehen"
          >
            <div
              class="w-14 h-14 sm:w-16 sm:h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 transition-transform group-hover:scale-110"
            >
              <Youtube class="w-full h-full" />
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Hero section animations */
  .hero-section {
    animation: fadeIn 1s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Animated blob backgrounds */
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  /* Gradient text animation */
  @keyframes gradient-x {
    0%,
    100% {
      background-size: 200% 200%;
      background-position: left center;
    }
    50% {
      background-size: 200% 200%;
      background-position: right center;
    }
  }

  .animate-gradient-x {
    animation: gradient-x 4s ease infinite;
  }

  /* Hero title animation */
  .hero-title {
    animation: slideUp 1s ease-out 0.2s both;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Podcast logo buttons - larger and more prominent */
  .podcast-logo-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem;
    border-radius: 1rem;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
  }

  @media (min-width: 640px) {
    .podcast-logo-button {
      padding: 1rem;
      border-radius: 1.25rem;
    }
  }

  @media (min-width: 768px) {
    .podcast-logo-button {
      padding: 1.5rem;
      border-radius: 1.5rem;
    }
  }

  .podcast-logo-button:hover {
    background: rgba(255, 255, 255, 0.95);
    transform: translateY(-4px);
    box-shadow: 0 12px 24px -6px rgba(0, 0, 0, 0.15);
  }

  /* Mobile-specific adjustments */
  @media (max-width: 640px) {
    /* Ensure proper centering on small screens */
    .hero-section {
      min-height: 100vh;
      min-height: 100dvh; /* Dynamic viewport height for mobile */
    }

    /* Reduce animation blob sizes on mobile to prevent overflow */
    .animate-blob {
      width: 200px;
      height: 200px;
    }
  }

  /* Extra small devices */
  @media (max-width: 375px) {
    .podcast-logo-button {
      padding: 0.5rem;
    }
  }

  /* Entrance animations for elements */
  @keyframes slideInFromLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInFromRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Hover effects */
  .group:hover .group-hover\:rotate-3 {
    transform: rotate(3deg) scale(1.1);
  }

  /* Pulse animation for live indicator */
  @keyframes ping {
    75%,
    100% {
      transform: scale(2);
      opacity: 0;
    }
  }

  .animate-ping {
    animation: ping 1s cubic-bezier(0, 0, 0.2, 1) infinite;
  }

  /* Glass morphism enhancement */
  .backdrop-blur-sm {
    backdrop-filter: blur(4px);
  }

  .backdrop-blur-md {
    backdrop-filter: blur(12px);
  }

  /* Button shine effect */
  @keyframes shine {
    from {
      transform: translateX(-100%);
    }
    to {
      transform: translateX(100%);
    }
  }

  /* Smooth transitions for interactive elements */
  a,
  button {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Ensure proper z-index layering */
  .relative {
    position: relative;
  }

  .z-10 {
    z-index: 10;
  }

  .-z-10 {
    z-index: -10;
  }
</style>
