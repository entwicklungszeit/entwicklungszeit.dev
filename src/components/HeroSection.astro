---
import { benefits } from '../data/benefits';
import Badge from './ui/Badge.astro';
import PodcastPlatformIcon from './ui/PodcastPlatformIcon.astro';
import Section from './ui/Section.astro';
import YouTubeEmbed from './YouTubeEmbed.astro';

import ApplePodcasts from '../assets/apple-podcasts.svg';
import Spotify from '../assets/spotify.svg';
import Youtube from '../assets/youtube.svg';
---

<Section background="white" class="pt-32 sm:pt-40 lg:pt-48 pb-8 lg:pb-12">
  <!-- Background pattern for depth -->
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute inset-0 bg-[url('/patterns/circuit-board.svg')] bg-repeat opacity-5"
    >
    </div>
    <div
      class="absolute top-0 inset-x-0 h-80 bg-gradient-to-b from-primary/10 to-transparent"
    >
    </div>
    <div
      class="absolute bottom-0 inset-x-0 h-80 bg-gradient-to-t from-gray-100/50 to-transparent"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div
      class="relative flex flex-col lg:gap-8 items-center max-h-screen min-h-[75vh]"
    >
      <!-- Content section with title and description -->
      <div
        class="relative z-10 text-center space-y-6 sm:space-y-8 w-full animate-fade-in-delay-50"
      >
        <div class="space-y-4 sm:space-y-6">
          <span
            class="inline-block text-sm font-medium tracking-[0.2em] uppercase text-primary"
            >Willkommen bei</span
          >
          <h1
            class="font-sans text-4xl sm:text-5xl lg:text-6xl text-gray-900 font-extrabold tracking-tight leading-[1.1]"
          >
            Entwicklungszeit
          </h1>
          <p
            class="text-lg sm:text-xl text-gray-700 max-w-2xl mx-auto leading-relaxed font-medium"
          >
            Entdecke dein volles Potenzial: Software Coaching für ambitionierte
            Tech Leads und Entwickler
          </p>
        </div>
      </div>

      <!-- Skills badges row -->
      <div
        class="relative z-10 w-full flex justify-center animate-fade-in-delay-100 max-w-4xl mx-auto"
      >
        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 w-full"
        >
          {benefits.map(benefit => <Badge {...benefit} />)}
        </div>
      </div>

      <!-- Video section - constrained to badges width -->
      <div
        class="relative z-0 flex w-full items-center justify-center animate-fade-in-delay-150 mt-8 lg:mt-12 max-w-2xl mx-auto"
      >
        <div class="flex flex-col items-center w-full">
          <!-- YouTube Video Embed Container -->
          <div class="relative w-full">
            <YouTubeEmbed
              videoId="ipwsc7b5mdU"
              title="Gregor Woiwode - Entwicklungszeit Software Coaching"
              loading="eager"
              gdprCompliant={true}
            />
          </div>

          <div class="text-center mt-4">
            <p class="text-gray-600 text-sm sm:text-base">
              mit <span
                class="font-semibold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent"
                >Gregor Woiwode</span
              >
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="justify-center hidden sm:flex">
      <a
        href="#podcast"
        aria-label="Mehr entdecken"
        class="text-primary hover:text-secondary transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-primary rounded-full p-2 group"
      >
        <div class="flex flex-col items-center">
          <span
            class="text-sm font-semibold text-gray-700 mb-2 opacity-90 group-hover:opacity-100 transition-opacity"
            >Mehr entdecken</span
          >
          <div class="relative">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 animate-pulse-down"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
            <div
              class="absolute inset-0 bg-primary/5 rounded-full -z-10 blur-lg"
            >
            </div>
          </div>
        </div>
      </a>
    </div>

    <!-- Podcast platforms section -->
    <div class="mt-24 sm:mt-0 py-4 sm:py-6 lg:py-8 text-center">
      <div
        class="flex flex-col sm:flex-row items-center justify-center sm:gap-3 gap-2"
      >
        <p
          class="text-gray-700 font-medium text-sm sm:text-base mb-3 sm:mb-0 sm:mr-1"
        >
          Jetzt anhören auf
        </p>
        <div class="flex flex-wrap items-center justify-center gap-4">
          <PodcastPlatformIcon
            href="https://creators.spotify.com/pod/show/entwicklungszeit"
            label="Entwicklungszeit auf Spotify anhören"
            platform="spotify"
          >
            <Spotify
              class="w-full h-full transform transition-transform duration-300 group-hover:scale-110"
            />
          </PodcastPlatformIcon>

          <PodcastPlatformIcon
            href="https://podcasts.apple.com/us/podcast/entwicklungszeit/id1767631664"
            label="Entwicklungszeit auf Apple Podcasts anhören"
            platform="apple"
          >
            <ApplePodcasts
              class="w-full h-full transform transition-transform duration-300 group-hover:scale-110"
            />
          </PodcastPlatformIcon>

          <PodcastPlatformIcon
            href="https://www.youtube.com/@entwicklungszeit"
            label="Entwicklungszeit auf YouTube ansehen"
            platform="youtube"
          >
            <Youtube
              class="w-full h-full transform transition-transform duration-300 group-hover:scale-110"
            />
          </PodcastPlatformIcon>
        </div>
      </div>
    </div>

    <style>
      .podcast-badge {
        position: relative;
      }

      .podcast-badge::before {
        content: '';
        position: absolute;
        inset: -3px;
        background: linear-gradient(90deg, #1e3a8a, #0284c7, #1e3a8a);
        border-radius: 9999px;
        z-index: -1;
        opacity: 0.5;
        animation: pulse-glow 3s ease-in-out infinite;
      }

      @keyframes pulse-glow {
        0%,
        100% {
          opacity: 0.5;
          transform: scale(1);
        }
        50% {
          opacity: 0.8;
          transform: scale(1.03);
        }
      }

      /* Standardize SVG icon sizes */
      .platform-icon-container svg {
        width: 28px;
        height: 28px;
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
      }

      @media (min-width: 640px) {
        .platform-icon-container svg {
          width: 32px;
          height: 32px;
        }
      }
    </style>
  </div>
</Section>
