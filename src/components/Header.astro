---
import { Image } from 'astro:assets';
import Logo from '../assets/logo.svg';
import Navigation from './Navigation.vue';
---

<header
  id="main-header"
  class="fixed w-full bg-white/95 backdrop-blur-sm shadow-md z-50 top-0"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-0.5">
    <div class="flex h-16 items-center justify-between w-full">
      <div class="flex items-center flex-shrink-0">
        <a
          href="/"
          class="flex items-center"
          aria-label="Entwicklungszeit Home"
        >
          <Image
            src={Logo}
            alt="Entwicklungszeit Logo"
            class="h-8 sm:h-10 w-auto"
            loading="eager"
          />
        </a>
      </div>

      <Navigation client:load currentPath={Astro.url.pathname} />
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.getElementById('main-header');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 20) {
        header?.classList.add('shadow-md');
      } else {
        header?.classList.remove('shadow-md');
      }
    });
  });
</script>
