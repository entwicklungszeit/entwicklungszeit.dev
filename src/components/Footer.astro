---
import { Image } from 'astro:assets';
import Logo from '../assets/logo.svg';
---

<footer class="footer-section bg-gray-950 text-gray-400 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="flex flex-col items-center md:items-start">
        <Image
          src={Logo}
          alt="Entwicklungszeit Logo"
          class="h-12 mb-4 opacity-75 transition-all duration-300"
        />
        <p
          class="text-gray-500 transition-colors duration-300 text-center md:text-left"
        >
          Dein Podcast für Softwareentwicklung, Führung und Kommunikation
        </p>
      </div>

      <div class="flex flex-col items-center md:items-end">
        <h3 class="text-lg font-semibold mb-4 text-gray-300">Rechtliches</h3>
        <ul class="space-y-2 text-center md:text-right">
          <li>
            <a
              href="/impressum"
              class="text-gray-500 transition-colors duration-300 hover:text-gray-300"
            >
              Impressum
            </a>
          </li>
          <li>
            <a
              href="/datenschutz"
              class="text-gray-500 transition-colors duration-300 hover:text-gray-300"
            >
              Datenschutz
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div
      class="mt-8 pt-8 border-t border-gray-800/50 text-center text-gray-500 transition-colors duration-300"
    >
      <p>
        &copy; {new Date().getFullYear()} Entwicklungszeit. Alle Rechte vorbehalten.
      </p>
    </div>
  </div>
</footer>

<style>
  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      rgba(255, 255, 255, 0.1)
    );
    transition: 0.5s;
  }

  .cta-button:hover::before {
    left: 100%;
  }

  .footer-section {
    transition: all 0.3s ease-in-out;
  }

  .footer-section:hover {
    background-color: rgb(2 6 23);
  }

  .footer-section:hover img {
    opacity: 1;
  }

  .footer-section:hover p,
  .footer-section:hover a {
    color: rgb(229 231 235);
  }

  .footer-section:hover .cta-button {
    background-image: linear-gradient(
      to right,
      var(--tw-gradient-from),
      var(--tw-gradient-to)
    );
    --tw-gradient-from: #1e3a8a;
    --tw-gradient-to: #0284c7;
    color: white;
    transform: scale(1.05);
    box-shadow: 0 20px 25px -5px rgb(30 58 138 / 0.2);
  }

  .footer-section:hover .border-t {
    border-color: rgb(55 65 81 / 0.5);
  }
</style>
