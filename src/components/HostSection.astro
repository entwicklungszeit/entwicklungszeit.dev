---
import { pages } from '../data/host';
import Gallery from './ui/Gallery.astro';
import Section from './ui/Section.astro';
---

<Section id="host" background="gray">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-20 items-start">
      <div data-aos="fade-right" class="max-w-xl">
        <div class="text-base sm:text-lg text-gray-700">
          <h2
            class="font-display text-4xl sm:text-5xl font-bold text-gray-900 mb-6 sm:mb-8 relative inline-block"
          >
            Host
            <span
              class="absolute -bottom-2 left-0 w-1/3 h-1 bg-gradient-to-r from-primary to-secondary"
            ></span>
          </h2>
          <Gallery pages={pages} />
        </div>
      </div>

      <div
        data-aos="fade-left"
        class="relative flex items-center justify-center lg:sticky lg:top-32 py-8"
      >
        <div class="flex flex-col items-center">
          <!-- Circular image container -->
          <div class="relative w-[240px] h-[240px] lg:w-[400px] lg:h-[400px]">
            <!-- Animated border -->
            <div
              class="absolute -inset-0.5 rounded-full bg-gradient-to-r from-primary via-secondary to-primary border border-white/10 animate-border-spin"
            >
            </div>

            <!-- Image -->
            <div
              class="absolute inset-[1px] rounded-full overflow-hidden bg-gradient-to-b from-gray-900 to-gray-800 border border-white/5"
            >
              <img
                src="/gregor-woiwode.png"
                alt="Gregor Woiwode"
                loading="lazy"
                class="w-full h-full object-cover object-top"
              />
            </div>
          </div>

          <div class="text-center mt-4">
            <p class="text-gray-600">
              mit <span
                class="font-semibold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent"
                >Gregor Woiwode</span
              >
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Section>

<style>
  .animate-border-spin {
    animation: border-spin 20s linear infinite;
  }

  @keyframes border-spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>
