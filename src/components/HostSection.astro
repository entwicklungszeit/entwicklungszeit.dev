---
import { pages } from '../data/host';
import Gallery from './ui/Gallery.astro';
import Section from './ui/Section.astro';
---

<Section id="host" background="gray">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-20 items-center">
      <div data-aos="fade-right" class="flex justify-center">
        <div class="max-w-xl text-base sm:text-lg text-gray-700">
          <h2
            class="font-display text-4xl sm:text-5xl font-bold text-gray-900 mb-6 sm:mb-8 relative inline-block"
          >
            Hallo, ich bin Gregor
            <span
              class="absolute -bottom-2 left-0 w-1/3 h-1 bg-gradient-to-r from-primary to-secondary"
            ></span>
          </h2>
          <Gallery pages={pages} />
        </div>
      </div>

      <div
        data-aos="fade-left"
        class="flex justify-center lg:sticky lg:top-32 py-8"
      >
        <div class="flex flex-col items-center">
          <!-- Circular image container -->
          <div
            class="relative w-[240px] h-[240px] lg:w-[400px] lg:h-[400px] mb-8"
          >
            <!-- Animated border -->
            <div
              class="absolute -inset-0.5 rounded-full bg-gradient-to-r from-primary via-secondary to-primary border border-gray-200 animate-border-spin"
            >
            </div>

            <!-- Image -->
            <div
              class="absolute inset-[1px] rounded-full overflow-hidden bg-gradient-to-b from-gray-50 to-white border border-gray-100"
            >
              <img
                src="/gregor-woiwode.png"
                alt="Gregor Woiwode"
                loading="lazy"
                class="w-full h-full object-cover object-top"
              />
            </div>
          </div>

          <!-- GDE Badge -->
          <div class="w-[200px] lg:w-[300px]">
            <img
              src="/gde-angular-2025.svg"
              alt="Google Developer Expert Angular 2025"
              loading="lazy"
              class="w-full h-auto"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</Section>

<style>
  .animate-border-spin {
    animation: border-spin 20s linear infinite;
  }

  @keyframes border-spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>
