---
import { testimonials } from '../data/testimonials';
import TestimonialCarousel from './TestimonialCarousel.astro';
import Section from './ui/Section.astro';

// Shuffle testimonials
const shuffledTestimonials = [...testimonials].sort(() => Math.random() - 0.5);
---

<Section id="testimonials" background="white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2
        class="font-display text-4xl sm:text-5xl font-bold text-gray-900 mb-6 sm:mb-8 relative inline-block"
      >
        Das sagen Partner
        <span
          class="absolute -bottom-2 left-0 w-1/3 h-1 bg-gradient-to-r from-primary to-secondary"
        ></span>
      </h2>
    </div>

    <TestimonialCarousel testimonials={shuffledTestimonials} />
  </div>
</Section>
