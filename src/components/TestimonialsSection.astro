---
import { testimonials } from '../data/testimonials';
import Heading from './Heading.astro';
import TestimonialCarousel from './TestimonialCarousel.astro';
import Section from './ui/Section.astro';

// Shuffle testimonials
const shuffledTestimonials = [...testimonials].sort(() => Math.random() - 0.5);
---

<Section id="testimonials" background="gray">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <Heading title="Das sagen meine Partner" />
    </div>

    <TestimonialCarousel testimonials={shuffledTestimonials} />
  </div>
</Section>
