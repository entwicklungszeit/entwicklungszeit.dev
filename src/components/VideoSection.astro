          </div>
        </div>
      </div>

      <!-- Right Column: Benefits -->
      <div class="flex flex-col lg:sticky lg:top-32">
        <!-- Benefits Cards -->
        <div class="space-y-4">
          {
            benefits.map((benefit, index) => (
              <div
                class="benefit-card"
                style={`animation-delay: ${index * 100}ms`}
              >
                <div class="relative p-5 bg-white rounded-xl border border-gray-200 shadow-sm">
                  <div class="flex items-start gap-4">
                    {/* Icon with gradient */}
                    <div
                      class={`flex-shrink-0 w-12 h-12 rounded-lg bg-gradient-to-br ${benefit.color} flex items-center justify-center`}
                    >
                      <svg
                        class="w-6 h-6 text-white"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M13 10V3L4 14h7v7l9-11h-7z"
                        />
                      </svg>
                    </div>

                    {/* Content */}
                    <div class="flex-1">
                      <h4 class="text-lg font-semibold text-gray-900 mb-1">
                        {benefit.text}
                      </h4>
                      <p class="text-sm text-gray-600 leading-relaxed">
                        {benefit.text === 'Softwareentwicklung' &&
                          'Best Practices, moderne Technologien und bew√§hrte Entwicklungsmethoden'}
                        {benefit.text === 'F√ºhrung' &&
                          'Teamf√ºhrung, Mentoring und effektive Leadership-Strategien'}
                        {benefit.text === 'Kommunikation' &&
                          'Klare Kommunikation im Team und mit Stakeholdern'}
                        {benefit.text === 'Strategie' &&
                          'Technische Entscheidungen treffen und Architektur planen'}
                        {benefit.text === 'Kreativit√§t' &&
                          'Innovative L√∂sungsans√§tze und kreatives Probleml√∂sen'}
                        {benefit.text === 'Pers√∂nlichkeit' &&
                          'Pers√∂nliche Entwicklung und Work-Life-Balance'}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>

        <!-- Call to Action -->
        <div
          class="mt-8 p-6 bg-gradient-to-br from-primary/5 to-secondary/5 rounded-2xl border border-primary/10"
        >
          <h4 class="text-lg font-semibold text-gray-900 mb-3">
            üéß Jetzt kostenlos reinh√∂ren!
